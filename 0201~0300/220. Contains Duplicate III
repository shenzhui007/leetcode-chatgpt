class Solution:
    def containsNearbyAlmostDuplicate(self, nums: List[int], indexDiff: int, valueDiff: int) -> bool:
        d = {}
        for i, n in enumerate(nums):
            for j in range(max(i - indexDiff, 0), i + indexDiff + 1):
                if j in d and abs(n - d[j]) <= valueDiff:
                    return True
            d[i] = n
        return False
